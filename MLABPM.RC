  VK_F3, IDM_F_EXIT,    VIRTUALKEY
  VK_F4, IDM_E_CREATE,  VIRTUALKEY
  VK_F5, MN_B0,         VIRTUALKEY
  VK_F6, IDM_METRO,     VIRTUALKEY
  VK_F7, IDM_C_MAIN,    VIRTUALKEY
