ACCELTABLE ID_MLEDIT
BEGIN
  VK_F3, IDM_F_EXIT_C1, VIRTUALKEY  // Close Song edit window
  VK_F4, IDM_E_CLEAR,   VIRTUALKEY  // Refresh window
  VK_F5, IDM_E_RESET,   VIRTUALKEY  // Reset MidiLab/2
  VK_F6, IDM_E_METRO,   VIRTUALKEY  // Toggle metronome
  "p"  , IDM_E_PLAY                 // Start Play
  " "  , IDM_E_PAUSE                // Pause play
END

MENU ID_MLAB
  BEGIN
    SUBMENU  "~File", IDM_FILE, MIS_TEXT
      BEGIN
        MENUITEM "~New",        IDM_F_NEW,  MIS_TEXT
        MENUITEM "~Open...",    IDM_F_OPEN, MIS_TEXT
        MENUITEM SEPARATOR
        MENUITEM "~Save   S",   IDM_F_SAVE, MIS_TEXT
        MENUITEM "Save ~as...", IDM_F_OPEN, MIS_TEXT
        MENUITEM SEPARATOR
        MENUITEM "Save ~Prefs", IDM_F_SAVPRF, MIS_TEXT
        MENUITEM "E~xit   F3",  IDM_F_EXIT, MIS_TEXT
      END

    SUBMENU  "~Edit",            IDM_EDIT_HELP, MIS_TEXT
      BEGIN
        MENUITEM "~Song Editor", IDM_E_CREATE,  MIS_TEXT
      END

    SUBMENU  "~Controls",        IDM_CONTROLS,  MIS_TEXT
      BEGIN
        MENUITEM "~Main...   F7",IDM_C_MAIN,    MIS_TEXT
      END

    SUBMENU  "~Utilities", IDM_ESOTERICA,       MIS_TEXT
      BEGIN
        MENUITEM "~Bulk Dump/Restore...", IDM_O_BULKDUMPRESTORE, MIS_TEXT
        MENUITEM "~Data Trace...", IDM_O_TRACE_C1,               MIS_TEXT
        MENUITEM "~Remote Control setup...", IDM_O_RMTCTL,       MIS_TEXT
        MENUITEM "~Send program change...", IDM_O_PGMCHNG,       MIS_TEXT
        MENUITEM "~User preferences...", IDM_O_USERPREF,         MIS_TEXT
        MENUITEM SEPARATOR
        MENUITEM "~Index display", IDM_O_INDEXDISPLAY,,          MIA_CHECKED
        MENUITEM "~Jumbo measure display", IDM_O_BIGBARS,        MIS_TEXT
      END

    SUBMENU "~Help",                              IDM_H_HELP
      BEGIN
        MENUITEM "~Help for help",               IDM_H_HELPFORHELP
        MENUITEM "~General help",                SC_HELPEXTENDED, MIS_SYSCOMMAND
        MENUITEM "~Keys help",                   SC_HELPKEYS, MIS_SYSCOMMAND
        MENUITEM "Help ~index",                  SC_HELPINDEX, MIS_SYSCOMMAND
        MENUITEM SEPARATOR
        MENUITEM "~Product information",        IDM_H_ABOUT
      END
  END

MENU ID_MLEDIT
  BEGIN
    SUBMENU  "~File", IDM_FILE_C1,              MIS_TEXT
      BEGIN
        MENUITEM "~Save", IDM_F_SAVE_C1,        MIS_TEXT,MIA_DISABLED
        MENUITEM SEPARATOR
        MENUITEM "E~xit  F3", IDM_F_EXIT_C1,    MIS_TEXT
      END

    SUBMENU  "~Edit", IDM_EDIT_C1,              MIS_TEXT
      BEGIN
        MENUITEM "~Cut", IDM_E_CUT,             MIS_TEXT, MIA_DISABLED
        MENUITEM "Cop~y", IDM_E_COPY,           MIS_TEXT, MIA_DISABLED
        MENUITEM "~Paste", IDM_E_PASTE,         MIS_TEXT, MIA_DISABLED
        MENUITEM "~Delete", IDM_E_DELETE,       MIS_TEXT, MIA_DISABLED
        MENUITEM SEPARATOR
        MENUITEM "~Track Edit", IDM_E_TRKED,    MIS_TEXT, MIA_DISABLED
      END

    SUBMENU  "F~unction", IDM_FUNCTION_C1,      MIS_TEXT
      BEGIN
        MENUITEM "~Play  P",  IDM_E_PLAY,       MIS_TEXT
        MENUITEM "Pa~use  Sp", IDM_E_PAUSE,     MIS_TEXT
        MENUITEM SEPARATOR
        MENUITEM "~Refresh  F4", IDM_E_CLEAR,   MIS_TEXT
        MENUITEM "~SysReset F5", IDM_E_RESET,   MIS_TEXT
        MENUITEM "~Grid lines",  IDM_E_GRID,    MIS_TEXT
      END

    SUBMENU "~Help",                             IDM_H_HELP
      BEGIN
        MENUITEM "~Help for help",               IDM_H_HELPFORHELP
        MENUITEM "~General help",                SC_HELPEXTENDED, MIS_SYSCOMMAND
        MENUITEM "~Keys help",                   SC_HELPKEYS, MIS_SYSCOMMAND
        MENUITEM "Help ~index",                  SC_HELPINDEX, MIS_SYSCOMMAND
      END
  END

